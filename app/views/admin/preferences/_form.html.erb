<%= form_for [:admin, preference] do |f| %>
  <%= f.label :artist_sort_order %>
  <%= f.radio_button :artist_sort_order, "ASC" %>
  <%= f.label :artist_sort_order, "Ascending", value: "ASC" %>
  <%= f.radio_button :artist_sort_order, "DESC" %>
  <%= f.label :artist_sort_order, "Descending", value: "DESC" %>
  <br />
  <%= f.label :song_sort_order %>
  <%= f.radio_button :song_sort_order, "ASC" %>
  <%= f.label :song_sort_order, "Ascending", value: "ASC" %>
  <%= f.radio_button :song_sort_order, "DESC" %>
  <%= f.label :song_sort_order, "Descending", value: "DESC" %>
  <br />
  <%= f.label :allow_create_artists %>
  <%= f.check_box :allow_create_artists %>
  <br />
  <%= f.label :allow_create_songs %>
  <%= f.check_box :allow_create_songs %>
  <br /><br />
  <%= f.submit %>
<% end %>
